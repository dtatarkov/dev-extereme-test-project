@{
    ViewBag.AppTitle = "DevExpress Test";
    ViewBag.PageTitle ??= "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.PageTitle - @ViewBag.AppTitle</title>

    @await RenderSectionAsync("Styles", required: false)
    <link rel="stylesheet" href="~/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <a class="det__header__logo" href="/">
            <span>DevExtreme</span>
            <span class="det__header__logo__by">by DevExpress</span>
        </a>

        <ul class="navbar-nav flex-row flex-wrap bd-navbar-nav">
            <li class="nav-item col-6 col-lg-auto">
                <a class="nav-link py-2 px-0 px-lg-2 active" aria-current="true" href="/">Documents</a>
            </li>
        </ul>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        &copy; 2022 - @ViewBag.AppTitle
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>